#!/usr/bin/env bash

set -e -x
# BOSH_INSTALL_TARGET => /var/vcap/packages/ruby_2.5.0

tar -xzf ruby-2.5.0.tar.gz
pushd ruby-2.5.0
  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --disable-install-doc
  make
  make install
popd

tar -zxvf rubygems-2.7.7.tgz
pushd rubygems-2.7.7
  ${BOSH_INSTALL_TARGET}/bin/ruby setup.rb
popd

${BOSH_INSTALL_TARGET}/bin/gem install bundler-1.16.2.gem --no-ri --no-rdoc --conservative

